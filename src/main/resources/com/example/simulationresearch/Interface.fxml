<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulationresearch.InterfaceController">
   <children>
      <Canvas fx:id="canvasInterface" height="800.0" width="300.0" />
      <Label fx:id="lbl_Titre" alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="10.0" prefHeight="50.0" prefWidth="200.0" text="Spaceship" textAlignment="CENTER">
         <font>
            <Font name="Arial" size="38.0" />
         </font>
      </Label>
      <Label layoutX="10.0" layoutY="100.0" prefHeight="30.0" prefWidth="280.0" text="Choose File">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <Button fx:id="btnSelectFile" layoutX="100.0" layoutY="150.0" mnemonicParsing="false" onAction="#btnSelectFileClick" prefHeight="30.0" prefWidth="100.0" text="Select " />
      <Label fx:id="lbl_AgentComm" layoutX="10.0" layoutY="294.0" prefHeight="30.0" prefWidth="280.0" text="Radius communication agent : 0.00" />
      <Label layoutX="10.0" layoutY="202.0" prefHeight="30.0" prefWidth="280.0" text=" Information of the file">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <Label fx:id="lbl_PositionTarget" layoutX="10.0" layoutY="232.0" prefHeight="30.0" prefWidth="280.0" text="Position of the target : (0 ; 0)" />
