      <Label layoutX="10.0" layoutY="340.0" prefHeight="30.0" prefWidth="280.0" text="Choose theme">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <ScrollPane layoutX="10.0" layoutY="370.0" prefHeight="65.0" prefWidth="280.0">
         <HBox prefHeight="50.0" prefWidth="280.0">
            <ImageView fx:id="imgSpace" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgSpaceClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../background3.jpg" />
            </ImageView>
            <ImageView fx:id="imgGrassBee" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgGrassBeeClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../grass.png" />
            </ImageView>
            <ImageView fx:id="imgGrassHelico" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgGrassHelicoClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../grass.png" />
            </ImageView>
         </HBox>
      </ScrollPane>
      <Label layoutX="10.0" layoutY="447.0" prefHeight="30.0" prefWidth="280.0" text="Choose Agent">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <ScrollPane layoutX="10.0" layoutY="477.0" prefHeight="65.0" prefWidth="280.0">
         <HBox prefHeight="50.0" prefWidth="280.0">
            <ImageView fx:id="imgShip" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgShipeClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../ship.png" />
            </ImageView>
            <ImageView fx:id="imgBee" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgBeeClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../abeillestop.png" />
            </ImageView>
            <ImageView fx:id="imgHelico" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgHelicoClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../helicostop.png" />
            </ImageView>
         </HBox>
      </ScrollPane>
      <Label layoutX="10.0" layoutY="556.0" prefHeight="30.0" prefWidth="280.0" text="Choose Target">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
      <ScrollPane layoutX="10.0" layoutY="586.0" prefHeight="65.0" prefWidth="280.0">
         <HBox prefHeight="50.0" prefWidth="280.0">
            <ImageView fx:id="imgAlien" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgAlienClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../alien.png" />
            </ImageView>
            <ImageView fx:id="imgTournesol" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgTournesolClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../tournesol.png" />
            </ImageView>
            <ImageView fx:id="imgHeliport" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#imgHeliportClick" pickOnBounds="true" preserveRatio="true">
               <Image url="@../../../heliport.png" />
            </ImageView>
         </HBox>
      </ScrollPane>
      <Button fx:id="btnStart" disable="true" layoutX="15.0" layoutY="730.0" maxWidth="100.0" mnemonicParsing="false" onAction="#btnStartClick" prefHeight="50.0" prefWidth="80.0" text="Start" />
      <Button fx:id="btnStop" disable="true" layoutX="110.0" layoutY="730.0" mnemonicParsing="false" onAction="#btnStopClick" prefHeight="50.0" prefWidth="80.0" text="Stop" />
      <Button fx:id="btnReset" disable="true" layoutX="205.0" layoutY="730.0" mnemonicParsing="false" onAction="#btnResetClick" prefHeight="50.0" prefWidth="80.0" text="Reset" />
      <Label layoutX="10.0" layoutY="670.0" prefHeight="30.0" prefWidth="280.0" text="Timer">
         <font>
            <Font name="Arial" size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
